<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<TableSelectDialog
		noDataText="No Institute Found"
		title="เลือกสถานศึกษา"
		search="handleSearch"
		confirm="handleClose"
		cancel="handleClosex"
		items="{
			path : '/Institute',
			sorter : {
				path : 'sccode',
				descending : false
			}
		}">
		<ColumnListItem>
			<cells>
				<Text text="{sccode}" />
				<Text text="{scnam}" />
			</cells>
		</ColumnListItem>
		<columns>
			<Column width="12em">
				<header>
					<Text text="รหัสสถานศึกษา" />
				</header>
			</Column>
			<Column width="12em">
				<header>
					<Text text="ชื่อสถานศึกษา" />
				</header>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>